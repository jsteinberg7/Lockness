{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Frontend",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/frontend/src",
            "preLaunchTask": "npm: start"
        },
        {
            "name": "Run Backend",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/app.py",
            "console": "integratedTerminal",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "PYTHONPATH": "${workspaceFolder}/backend",
                "GEVENT_SUPPORT": "True"
            },
            "python": "${workspaceFolder}/backend/venv/bin/python",
            "cwd": "${workspaceFolder}/backend"
        },
        {
            "name": "Pytest - Verification Endpoint",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/backend/tests/pytests/test_verify_content_endpoint.py",
                // "-s" // Use -s to show print statements
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend",
                "USE_TEST_MODE": "true"
            }
        },
        {
            "name": "Run pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/backend/pytests",
                "-s"
            ],
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/backend/venv/bin/python",
            "cwd": "${workspaceFolder}/backend",
            "justMyCode": false,
        }
    ],
    "compounds": [
        {
            "name": "Run Fullstack",
            "configurations": [
                "Run Frontend",
                "Run Backend"
            ]
        }
    ]
}